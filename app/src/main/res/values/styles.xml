<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="floatingActionButtonStyle">
            @style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon
        </item>
        <item name="android:showDividers">none</item>
        <item name="actionBarDivider">@android:color/transparent</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.NoteItems">
        <item name="android:layout_marginLeft" tools:ignore="PrivateResource">
            @dimen/mtrl_card_spacing
        </item>
        <item name="android:layout_marginTop" tools:ignore="PrivateResource">
            @dimen/mtrl_card_spacing
        </item>
        <item name="android:layout_marginRight" tools:ignore="PrivateResource">
            @dimen/mtrl_card_spacing
        </item>
    </style>

</resources>
